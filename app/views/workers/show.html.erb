<div class="container">
  <div class="row">
    <div>
      <h1>Name: <span class="name-detail"><%= @worker.name.capitalize %></span></h1>
      <p><em>Status: <span class="name-detail"><%= @worker.status %></em></span></p>
    </div>
    <div class="worker-actions">
      <button class="btn btn-info">
        <%= link_to "Update information", edit_worker_path(@worker) %>
      </button>
      <button class="btn btn-danger">
        <%= link_to 'Delete worker', worker_path(@worker), method: :delete %>
      </button>
    </div>
  </div>
  <br>
  <div class="calendar-title">
    <h3 class="worker-name text-center"><%= @worker.name.capitalize %> Shifts Planning</h3>
  </div>
    <button class="btn btn-success"><%= link_to "Create a shift", new_worker_shift_path(@worker) %></button>
  <div class="calendar">
    <%= month_calendar events: @worker_shifts do |date, shifts| %>
      <%= date.strftime("%b %d") %>
      <% shifts.each do |shift| %>
        <div>
          <p>Shift: <%= @worker.name.capitalize %></p>
          <button class="btn btn-update"><%= link_to "Update", edit_worker_shift_path(@worker, shift) %></button>
          <button class="btn btn-destroy"><%= link_to "Delete", worker_shift_path(@worker, shift), method: :delete %></button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
